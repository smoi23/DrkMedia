{% extends 'layout.html.twig' %}

{% block title %}RWM Media{% endblock%}

{% block content %}

<article class="media">
	    {% for val in props %}
		    <div id="entry">
	        <a href="{{ path('media/show') }}/{{ val.id }}">{{ val.id }}: {{ val.filename }}</a>
	        <div class="date">Modified: <time datetime="{{ val.modified|date('c') }}">{{ val.modified|date('l, j F, Y, H:i') }}</time></div>
	        <p></p>
    		</div>
	    {% endfor %}
</article>
    
{% endblock %}    
